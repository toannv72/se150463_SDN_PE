<div class="mx-auto right-0 my-8 w-60">
    <div class="bg-white rounded overflow-hidden shadow-lg">
        <div class="text-center p-6 bg-gray-800 border-b">
            (<svg aria-hidden="true" role="img" class="h-24 w-24 text-white rounded-full mx-auto" width="32" height="32"
                preserveAspectRatio="xMidYMid meet" viewBox="0 0 256 256">
                <path fill="currentColor"
                    d="M172 120a44 44 0 1 1-44-44a44 44 0 0 1 44 44Zm60 8A104 104 0 1 1 128 24a104.2 104.2 0 0 1 104 104Zm-16 0a88 88 0 1 0-153.8 58.4a81.3 81.3 0 0 1 24.5-23a59.7 59.7 0 0 0 82.6 0a81.3 81.3 0 0 1 24.5 23A87.6 87.6 0 0 0 216 128Z">
                </path>
            </svg>
            <p class="pt-2 text-lg font-semibold text-gray-50">{{account.username}}</p>
            <p class="pt-2 text-lg font-semibold text-gray-50">{{account.name}}</p>
            <p class="pt-2 text-lg font-semibold text-gray-50">{{account.yob}}</p>
            <p class="text-sm text-red-600">{{Message}}</p>
            <div class="mt-5">
                <section x-data="{modalOpenPut: false}">
                    <button @click="modalOpenPut = true" x-data="{ tooltip: 'Edite' }"
                        class="border rounded-full py-2 px-4 text-xs font-semibold text-gray-100 my-2">
                        Change the information
                    </button>
                    <div x-show="modalOpenPut" x-transition
                        class="fixed top-0 left-0 flex min-h-screen w-full items-center z-30 justify-center bg-black bg-opacity-90 px-4 py-5">
                        <div @click.outside="modalOpenPut = true"
                            class="w-3/4 h-5/6  rounded-lg  bg-white py-8 px-8 text-center md:py-[60px] md:px-[70px]">
                            <div class="flex justify-end mb-2">
                                <button @click="modalOpenPut = false"><svg xmlns="http://www.w3.org/2000/svg"
                                        height="2em"
                                        viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                        <path
                                            d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
                                    </svg></button>
                            </div>
                            <div class="flex items-center justify-center  ">

                                <div class="mx-auto  w-full   ">
                                    <form method="post" action="/account/information?_method=PUT">
                                        <div class="flex items-center justify-center overflow-y-auto ">
                                            <div class=" mx-auto  w-full  max-w-[550px] ">
                                                <div class="mb-5 flex flex-col items-start">
                                                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                                                        Name
                                                    </label>
                                                    <input required type="text" name="name" id="categoryName"
                                                        placeholder="Name" minlength="1" maxlength="1000"
                                                        value="{{account.name}}"
                                                        class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                                                </div>
                                                 <div class="mb-5 flex flex-col items-start">
                                                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                                                        yob
                                                    </label>
                                                    <input  pattern="[0-9]*" max="2023" min="1900"  required type="number" name="yob" id="categoryName"
                                                        placeholder="yob" minlength="1" maxlength="1000"
                                                        value="{{account.yob}}"
                                                        class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="p-4">
                                            <button type="submit"
                                                class="btn btn-primary hover:shadow-form rounded-md  py-3 px-8 text-base font-semibold text-white ">
                                                Submit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section x-data="{modalOpenCreate: false}">
                    <button @click="modalOpenCreate = true" x-data="{ tooltip: 'Edite' }"
                        class="border rounded-full py-2 px-4 text-xs font-semibold text-gray-100">
                        Change the password
                    </button>
                    <div x-show="modalOpenCreate" x-transition
                        class="fixed top-0 left-0 flex min-h-screen w-full items-center z-30 justify-center bg-black bg-opacity-90 px-4 py-5">
                        <div @click.outside="modalOpenCreate = true"
                            class="w-3/4 h-5/6  rounded-lg  bg-white py-8 px-8 text-center md:py-[60px] md:px-[70px]">
                            <div class="flex justify-end mb-2">
                                <button @click="modalOpenCreate = false"><svg xmlns="http://www.w3.org/2000/svg"
                                        height="2em"
                                        viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                        <path
                                            d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
                                    </svg></button>
                            </div>
                            <div class="flex items-center justify-center  ">

                                <div class="mx-auto  w-full   ">
                                    <form method="post" action="/account?_method=PUT">
                                        <div class="flex items-center justify-center overflow-y-auto ">
                                            <div class=" mx-auto  w-full  max-w-[550px] ">
                                                <div class="mb-5 flex flex-col items-start">
                                                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                                                        Old Password
                                                    </label>
                                                    <input required type="password" name="password" id="categoryName"
                                                        placeholder=" Password" minlength="1" maxlength="1000"
                                                        class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                                                </div>
                                                 <div class="mb-5 flex flex-col items-start">
                                                    <label class="mb-3 block text-base font-medium text-[#07074D]">
                                                        New Password
                                                    </label>
                                                    <input required type="password" name="newPassword" id="categoryName"
                                                        placeholder=" New Password" minlength="1" maxlength="1000"
                                                        class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="p-4">
                                            <button type="submit"
                                                class="btn btn-primary hover:shadow-form rounded-md  py-3 px-8 text-base font-semibold text-white ">
                                                Submit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div x-show="modalOpen" x-transition
                class="fixed top-0 left-0 flex min-h-screen w-full items-center z-30 justify-center bg-black bg-opacity-90 px-4 py-5">
                <div @click.outside="modalOpen = true"
                    class="w-3/4 h-4/5  rounded-lg  bg-white py-8 px-8 text-center md:py-[60px] md:px-[70px]">
                    <div class="flex justify-end mb-2">
                        <button @click="modalOpen = false"><svg xmlns="http://www.w3.org/2000/svg" height="2em"
                                viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                <path
                                    d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
                            </svg></button>
                    </div>
                    <div class="flex items-center justify-center  ">

                        <div class="mx-auto  w-full   ">
                            <form method="post" action="/category/{{this._id}}?_method=PUT">
                                <div class="flex items-center justify-center overflow-y-auto ">
                                    <div class=" mx-auto  w-full  max-w-[550px] ">
                                        <div class="mb-5 flex flex-col items-start">
                                            <label class="mb-3 block text-base font-medium text-[#07074D]">
                                                Category Name
                                            </label>
                                            <input required value="{{this.categoryName}}" type="text"
                                                name="categoryName" id="categoryName" placeholder="Full Category Name"
                                                minlength="1" maxlength="1000"
                                                class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                                        </div>
                                    </div>
                                </div>
                                <div class="p-4">
                                    <button type="submit"
                                        class="btn btn-primary hover:shadow-form rounded-md  py-3 px-8 text-base font-semibold text-white ">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="border-b">
            <Link href="/account/campaigns">
            <a class="px-4 py-2 hover:bg-gray-100 flex">
                <div class="text-green-600">
                    <svg fill="none" stroke="currentColor" strokeLinecap="round" strokeLinejoin="round" strokeWidth="1"
                        viewBox="0 0 24 24" class="w-5 h-5">
                        <path
                            d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                </div>
                <div class="pl-3">
                    <p class="text-sm font-medium text-gray-800 leading-none">
                        Campaigns
                    </p>
                    <p class="text-xs text-gray-500">View your campaigns</p>
                </div>
            </a>
            </Link>
            <Link href="/account/donations">
            <a class="px-4 py-2 hover:bg-gray-100 flex">
                <div class="text-gray-800">
                    <svg fill="none" stroke="currentColor" strokeLinecap="round" strokeLinejoin="round" strokeWidth="1"
                        viewBox="0 0 24 24" class="w-5 h-5">
                        <path
                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <div class="pl-3">
                    <p class="text-sm font-medium text-gray-800 leading-none">Donations</p>
                    <p class="text-xs text-gray-500">View your last donations</p>
                </div>
            </a>
            </Link>
        </div>

    </div>
</div>